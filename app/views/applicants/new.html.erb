<h1>New Application</h1>
<%= form_with url: "/applications/#{new_applicant.id}/new", method: :post, local: true do |f| %>
   <%= f.label :name %>
   <%= f.text_field :name %>

   <%= f.label :address %>
   <%= f.text_field :address %>

   <%= f.label :city %>
   <%= f.text_field :city %>

   <%= f.label :zip %>
   <%= f.number_field :zip %>

   <%= f.submit %>
<% end %>